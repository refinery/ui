.site_bar
  .container
    .sixteen.columns
      .four.columns.alpha
        %b
          = link_to 'Website Name', '#'
        = link_to 'Switch to Site', '#'
      .four.columns.offset-by-four
        Refinery
      .four.columns.omega
        Hello
        = link_to 'parndt', '#'
        |
        = link_to 'Sign out', '#'
        |
        = link_to 'Help', '#'

.container
  .sixteen.columns
    .four.columns.alpha
      %p
        EN
        |
        %a{:href => '#'} FR
        |
        %a{:href => '#'} PT

      %ul
        %li.first= link_to 'Dashboard', '#'
        %li= link_to 'Pages', '#'
        %li= link_to 'Files', '#'
        %li= link_to 'Images', '#'
        %li= link_to 'Users', '#'
        %li 
          = link_to 'Blog', '#'
          %ul
            %li= link_to 'Categories', '#'
            %li= link_to 'Posts', '#'
            %li= link_to 'Settings', '#'
        %li= link_to 'News', '#'
        %li= link_to 'Copywriting', '#'
          
    .twelve.columns.omega
      %h1.title
        Add a page

      = form_tag('#', :method => :post) do
        = label_tag 'title'
        = text_field_tag 'title', nil, :placeholder => 'Post title', :class => 'widest'

        = render :partial => 'wysiwyg', :locals => {:placeholder_text => 'Say something here!'}

        %div.advanced_options
          %a.folding{:href => '#'} Advanced Options
          %div.folding{:style => 'display: none'}

            %h2 Page Settings

            = label_tag 'parent_page'
            = select_tag 'parent_page', options_for_select([['Page 1', 1], ['Page 2', 2], ['Page 3', 3]]), :include_blank => true

            = label_tag 'menu_title'
            = text_field_tag 'menu_title', nil, :placeholder => 'What shows in the menu'
